<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
        x:Class="MetalSelling.AddClientWindow"
        Title="Add New Client"
        WindowStartupLocation="CenterOwner"
        Background="#2c3e50"
        FontFamily="Segoe UI">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="#34495e" CornerRadius="8" Padding="15" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="ADD NEW CLIENT" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          Foreground="#ecf0f1"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,15" HorizontalAlignment="Center">
                <TextBlock Text="Full Name *" 
                          Foreground="#bdc3c7" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,5"/>
                <TextBox x:Name="NameTextBox" 
                        Width="250" 
                        Height="35"
                        Background="#34495e"
                        Foreground="#ecf0f1"
                        BorderBrush="#3498db"
                        VerticalContentAlignment="Center"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="8,0"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,15" HorizontalAlignment="Center">
                <TextBlock Text="Client Type *" 
                          Foreground="#bdc3c7" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,5"/>
                <ComboBox x:Name="IdClientTypeComboBox" 
                         DisplayMemberBinding="{Binding Title}" 
                         Width="250"
                         Height="35"
                         Background="#34495e"
                         VerticalContentAlignment="Center"
                         Foreground="#ecf0f1"
                         BorderBrush="#3498db"
                         BorderThickness="1"
                         CornerRadius="4"/>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,15" HorizontalAlignment="Center">
                <TextBlock Text="Phone Number" 
                          Foreground="#bdc3c7" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,5"/>
                <TextBox x:Name="PhoneTextBox" 
                        Width="250" 
                        Height="35"
                        Background="#34495e"
                        Foreground="#ecf0f1"
                        BorderBrush="#3498db"
                        BorderThickness="1"
                        VerticalContentAlignment="Center"
                        CornerRadius="4"
                        Padding="8,0"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,15" HorizontalAlignment="Center">
                <TextBlock Text="Email Address" 
                          Foreground="#bdc3c7" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,5"/>
                <TextBox x:Name="EmailTextBox" 
                        Width="250" 
                        Height="35"
                        Background="#34495e"
                        Foreground="#ecf0f1"
                        VerticalContentAlignment="Center"
                        BorderBrush="#3498db"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="8,0"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" 
                       HorizontalAlignment="Center" 
                       Margin="0,10">
                <TextBlock Text="Personal Discount (%)" 
                          Foreground="#bdc3c7" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,5"/>
                <TextBox x:Name="DiscountTextBox" 
                        Width="200" 
                        Height="35"
                        Background="#34495e"
                        Foreground="#ecf0f1"
                        BorderBrush="#9b59b6"
                        BorderThickness="1"
                        CornerRadius="4"
                        VerticalContentAlignment="Center"
                        Padding="8,0"
                        Text="0"/>
                <TextBlock Text="Optional - enter discount percentage" 
                          Foreground="#95a5a6" 
                          FontSize="11"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>

        <Border Grid.Row="2" Background="#34495e" CornerRadius="8" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
                <Button x:Name="SaveButton" 
                       Height="40" 
                       Background="#27ae60"
                       BorderBrush="#27ae60"
                       BorderThickness="1"
                       Foreground="#ffffff"
                       FontWeight="Bold"
                       FontSize="14"
                       Click="SaveButton_Click"
                       VerticalContentAlignment="Center"
                       CornerRadius="6"
                       Content="💾 SAVE">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#2ecc71"/>
                            <Setter Property="BorderBrush" Value="#2ecc71"/>
                        </Style>
                    </Button.Styles>
                </Button>
                
                <Button x:Name="BackButton" 
                       Height="40" 
                       Background="Transparent"
                       BorderBrush="#95a5a6"
                       BorderThickness="1"
                       Foreground="#ecf0f1"
                       FontWeight="SemiBold"
                       Click="BackButton_Click"
                       VerticalContentAlignment="Center"
                       CornerRadius="6"
                       Content="← BACK">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#95a5a6"/>
                            <Setter Property="Foreground" Value="#ffffff"/>
                        </Style>
                    </Button.Styles>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>