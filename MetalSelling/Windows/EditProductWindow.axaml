<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
        x:Class="MetalSelling.EditProductWindow"
        Title="Edit Product"
        WindowStartupLocation="CenterOwner"
        Background="#2c3e50"
        FontFamily="Segoe UI">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="#34495e" CornerRadius="8" Padding="15" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="EDIT PRODUCT" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          Foreground="#ecf0f1"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20" HorizontalAlignment="Center">
                <TextBlock Text="PRODUCT TITLE *" 
                          Foreground="#bdc3c7" 
                          FontWeight="SemiBold"
                          FontSize="12"
                          Margin="0,0,0,8"/>
                <TextBox x:Name="TitleTextBox" 
                        Width="350"
                        Height="40"
                        Background="#34495e"
                        Foreground="#ecf0f1"
                        VerticalContentAlignment="Center"
                        BorderBrush="#3498db"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12,0"
                        FontSize="14"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Margin="0,0,0,20" HorizontalAlignment="Center">
                <TextBlock Text="PRICE PER PIECE *" 
                          Foreground="#bdc3c7" 
                          FontWeight="SemiBold"
                          FontSize="12"
                          Margin="0,0,0,8"/>
                <TextBox x:Name="PricePerPieceTextBox" 
                        Width="350"
                        Height="40"
                        Background="#34495e"
                        Foreground="#ecf0f1"
                        BorderBrush="#f39c12"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12,0"
                        VerticalContentAlignment="Center"
                        FontSize="14"
                        Watermark="0.00"/>
                <TextBlock Text="Enter price in rubles" 
                          Foreground="#95a5a6" 
                          FontSize="11"
                          Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,0,0,20" HorizontalAlignment="Center">
                <TextBlock Text="METAL TYPE *" 
                          Foreground="#bdc3c7" 
                          FontWeight="SemiBold"
                          FontSize="12"
                          Margin="0,0,0,8"/>
                <ComboBox x:Name="IdMetalTypeComboBox" 
                         DisplayMemberBinding="{Binding Title}" 
                         Width="350"
                         Height="40"
                         Background="#34495e"
                         Foreground="#ecf0f1"
                         BorderBrush="#9b59b6"
                         VerticalContentAlignment="Center"
                         BorderThickness="1"
                         CornerRadius="4"/>
            </StackPanel>

            <Border Grid.Row="3" 
                   Background="#2c3e50" 
                   BorderBrush="#34495e" 
                   BorderThickness="1"
                   CornerRadius="6" 
                   Padding="12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="📦 CURRENT STOCK: " 
                              Foreground="#bdc3c7" 
                              FontWeight="SemiBold"/>
                    <TextBlock x:Name="CurrentStockText" 
                              Text="0" 
                              Foreground="#2ecc71"
                              FontWeight="Bold"
                              Margin="5,0,0,0"/>
                    <TextBlock Text=" pcs." 
                              Foreground="#bdc3c7"
                              Margin="2,0,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="2" Background="#34495e" CornerRadius="8" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
                <Button x:Name="SaveButton" 
                       Height="40" 
                       Background="#27ae60"
                       BorderBrush="#27ae60"
                       BorderThickness="1"
                       Foreground="#ffffff"
                       FontWeight="Bold"
                       FontSize="14"
                       VerticalContentAlignment="Center"
                       Click="SaveButton_Click"
                       CornerRadius="6"
                       Content="💾 UPDATE">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#2ecc71"/>
                            <Setter Property="BorderBrush" Value="#2ecc71"/>
                        </Style>
                    </Button.Styles>
                </Button>
                
                <Button x:Name="BackButton" 
                       Height="40" 
                       Background="Transparent"
                       BorderBrush="#95a5a6"
                       BorderThickness="1"
                       Foreground="#ecf0f1"
                       FontWeight="SemiBold"
                       Click="BackButton_Click"
                       CornerRadius="6"
                       VerticalContentAlignment="Center"
                       Content="← BACK">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#95a5a6"/>
                            <Setter Property="Foreground" Value="#ffffff"/>
                        </Style>
                    </Button.Styles>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>