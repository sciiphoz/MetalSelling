<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="550"
        x:Class="MetalSelling.AddOrderWindow"
        Title="Добавление заказа"
		WindowStartupLocation="CenterOwner">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>

		<StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,10">
			<TextBlock FontWeight="Bold">Клиент</TextBlock>
			<ComboBox x:Name="IdClientComboBox" DisplayMemberBinding="{Binding Name}" Width="300" Height="30"/>
		</StackPanel>

		<StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,10">
			<TextBlock FontWeight="Bold">Добавление товаров</TextBlock>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
				<ComboBox x:Name="IdProductComboBox" DisplayMemberBinding="{Binding Title}" Width="200" Height="30" Margin="0,0,10,0"/>
				<TextBox x:Name="QuantityTextBox" Width="80" Height="30" Margin="0,0,10,0" Watermark="Количество"/>
				<Button Background="#ABCFCE" Click="AddProductButton_Click" Width="80" Height="30">Добавить</Button>
			</StackPanel>
		</StackPanel>

		<ScrollViewer Grid.Row="2" Margin="20">
			<ListBox x:Name="OrderItemsListBox">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<Border BorderThickness="1" BorderBrush="#546F94" Background="#E8F4F3" Margin="0,2" Padding="10">
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="Auto"/>
									<ColumnDefinition Width="Auto"/>
									<ColumnDefinition Width="Auto"/>
								</Grid.ColumnDefinitions>

								<StackPanel Grid.Column="0" Orientation="Vertical">
									<TextBlock FontWeight="Bold" Text="{Binding Product.Title}"/>
									<TextBlock Text="{Binding Product.IdMetalTypeNavigation.Title}" Foreground="Gray"/>
								</StackPanel>

								<TextBlock Grid.Column="1" Text="{Binding Quantity}" VerticalAlignment="Center" Margin="10,0"/>
								<TextBlock Grid.Column="2" Text="{Binding TotalPrice, StringFormat='{}{0:C}'}" VerticalAlignment="Center" Margin="10,0"/>
								<Button Grid.Column="3" Background="#FF6B6B" Foreground="White" Click="RemoveProductButton_Click"
										Width="30" Height="30" Margin="10,0">×</Button>
							</Grid>
						</Border>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</ScrollViewer>

		<StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
			<TextBlock FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0">
				Итого: <Run x:Name="TotalPriceText" Text="0 руб."/>
			</TextBlock>
			<Button Background="#ABCFCE" x:Name="SaveButton" HorizontalAlignment="Center" Width="100" Margin="0,0,20,0"
					HorizontalContentAlignment="Center" Click="SaveButton_Click" Height="35">Сохранить заказ</Button>
			<Button Background="#ABCFCE" x:Name="BackButton" HorizontalAlignment="Center" Width="75"
					HorizontalContentAlignment="Center" Click="BackButton_Click" Height="35">Назад</Button>
		</StackPanel>
	</Grid>
</Window>