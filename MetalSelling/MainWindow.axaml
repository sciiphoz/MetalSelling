<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MetalSelling.MainWindow"
        WindowState="Maximized"
        Title="MetalSelling">
    <Grid>
		<Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="6*"></RowDefinition>
        </Grid.RowDefinitions>
    
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="ClientsPageButton" Click="ClientsPageButton_Click" Margin="15 0" Content="Clients"></Button>
            <Button x:Name="OrdersPageButton" Click="OrdersPageButton_Click" Margin="15 0" Content="Orders"></Button>
            <Button x:Name="HistoriesPageButton" Click="HistoriesPageButton_Click" Margin="15 0" Content="History"></Button>
            <Button x:Name="ProductsPageButton" Click="ProductsPageButton_Click" Margin="15 0" Content="Products"></Button>
            <Button x:Name="SuppliesPageButton" Click="SuppliesPageButton_Click" Margin="15 0" Content="Supplies"></Button>
            <Button x:Name="CreateReportButton" Click="CreateReportButton_Click" Margin="15 0" Content="Create a report"></Button>
        </StackPanel>

        <ContentControl x:Name="MainContentControl" Grid.Row="1"></ContentControl>
    </Grid>
</Window>
