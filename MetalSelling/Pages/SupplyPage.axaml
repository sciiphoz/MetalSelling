<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MetalSelling.SupplyPage"
             Background="Transparent">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>

		<ScrollViewer Grid.Row="0" Background="Transparent" Padding="10">
			<ListBox x:Name="MainListBox" Background="Transparent" BorderThickness="0">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<Border Height="140" 
                               BorderThickness="1" 
                               BorderBrush="{Binding StatusColor}" 
                               Background="#34495e"
                               CornerRadius="8"
                               Margin="0,5">
							<Grid Margin="15">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="Auto"/>
								</Grid.ColumnDefinitions>

								<StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
									<StackPanel Orientation="Horizontal" Margin="0, 0, 0, 8">
										<TextBlock FontSize="16" FontWeight="Bold" 
                                                  Foreground="#3498db" 
                                                  Text="{Binding IdSupplierNavigation.Title}"/>
										<TextBlock FontSize="16" Text=" → " 
                                                  Foreground="#7f8c8d"
                                                  VerticalAlignment="Center"
                                                  Margin="8,0"/>
										<TextBlock FontSize="16" FontWeight="SemiBold"
                                                  Foreground="#ecf0f1" 
                                                  Text="{Binding IdProductNavigation.Title}"/>
                                        <TextBlock FontSize="14" Text=" • " 
                                                  Foreground="#7f8c8d"
                                                  VerticalAlignment="Center"
                                                  Margin="10,0,0,0"/>
                                        <TextBlock FontSize="14"
                                                  Foreground="#bdc3c7"
                                                  Text="{Binding IdProductNavigation.IdMetalTypeNavigation.Title}"/>
									</StackPanel>

									<StackPanel Orientation="Horizontal" Margin="0, 0, 0, 6">
										<TextBlock Text="Date: " 
                                                  Foreground="#bdc3c7"
                                                  FontWeight="SemiBold"/>
										<TextBlock Text="{Binding Date}" 
                                                  Foreground="#ecf0f1"
                                                  Margin="5,0,0,0"/>
									</StackPanel>

									<StackPanel Orientation="Horizontal" Margin="0, 0, 0, 6">
										<TextBlock Text="Amount: " 
                                                  Foreground="#bdc3c7"
                                                  FontWeight="SemiBold"/>
										<TextBlock Text="{Binding Amount}" 
                                                  Foreground="#f39c12"
                                                  FontWeight="Bold"
                                                  Margin="5,0,0,0"/>
										<TextBlock Text=" pcs." 
                                                  Foreground="#bdc3c7"
                                                  Margin="2,0,0,0"/>
									</StackPanel>

									<StackPanel Orientation="Horizontal" Margin="0, 0, 0, 0">
										<TextBlock Text="Status: " 
                                                  Foreground="#bdc3c7"
                                                  FontWeight="SemiBold"/>
										<Border Background="{Binding StatusBackground}" 
                                               CornerRadius="4" 
                                               Padding="6,2"
                                               Margin="5,0,0,0">
											<TextBlock FontSize="12" FontWeight="Bold" 
                                                      Foreground="#ffffff"
                                                      Text="{Binding Status}"/>
										</Border>
									</StackPanel>
								</StackPanel>

								<StackPanel Grid.Column="1" Orientation="Vertical" 
                                           HorizontalAlignment="Right" 
                                           VerticalAlignment="Top">
									<TextBlock Text="Total Cost:" 
                                              Foreground="#bdc3c7"
                                              Margin="0 0 0 15"
                                              FontWeight="SemiBold"
                                              HorizontalAlignment="Right"/>
									<TextBlock FontSize="18" FontWeight="Bold" 
                                              Text="{Binding Price, StringFormat='{}{0:N2} rub.'}" 
                                              Foreground="#2ecc71"
                                              HorizontalAlignment="Right"/>
								</StackPanel>
							</Grid>
						</Border>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</ScrollViewer>

		<Border Grid.Row="1" Background="#2c3e50" Height="70" 
               BorderBrush="#34495e" BorderThickness="1 0 0 0">
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
				<Button x:Name="AddSupplyButton" 
                       Height="35" 
                       Background="Transparent" 
                       BorderBrush="#27ae60" 
                       BorderThickness="2"
                       VerticalContentAlignment="Center"
                       Foreground="#ecf0f1"
                       FontWeight="SemiBold"
                       Margin="15 0" 
                       Click="AddSupplyButton_Click" 
                       Content="➕ New Supply">
					<Button.Styles>
						<Style Selector="Button:pointerover">
							<Setter Property="Background" Value="#27ae60"/>
							<Setter Property="Foreground" Value="#ffffff"/>
						</Style>
					</Button.Styles>
				</Button>
				
				<Button x:Name="DeleteSupplyButton" 
                       Height="35" 
                       Background="Transparent" 
                       BorderBrush="#e74c3c" 
                       BorderThickness="2"
                       Foreground="#ecf0f1"
                       VerticalContentAlignment="Center"
                       FontWeight="SemiBold"
                       Margin="15 0" 
                       Click="DeleteSupplyButton_Click" 
                       Content="🗑️ Delete">
					<Button.Styles>
						<Style Selector="Button:pointerover">
							<Setter Property="Background" Value="#e74c3c"/>
							<Setter Property="Foreground" Value="#ffffff"/>
						</Style>
					</Button.Styles>
				</Button>
			</StackPanel>
		</Border>
	</Grid>
</UserControl>