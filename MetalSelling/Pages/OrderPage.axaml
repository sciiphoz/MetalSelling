<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MetalSelling.OrderPage">
        <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="5*"></RowDefinition>
			<RowDefinition Height="1*"></RowDefinition>
		</Grid.RowDefinitions>

		<ScrollViewer Grid.Row="0">
			<ListBox x:Name="MainListBox" DoubleTapped="MainListBox_DoubleTapped">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<Border Width="1000" Height="150" BorderThickness="2" BorderBrush="#546F94" Background="#ABCFCE">
							<Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

								<StackPanel Grid.Column="0" Orientation="Vertical" Margin="15, 10" VerticalAlignment="Center">
									<StackPanel Orientation="Horizontal" Margin="0, 10, 0, 10">
										<TextBlock FontSize="18" Text="{Binding IdClientNavigation.Name}"></TextBlock>
										<TextBlock FontSize="18" Text=" | "></TextBlock>
										<TextBlock FontSize="18" Text="{Binding IdProductNavigation.Title}"></TextBlock>
									</StackPanel>
									
									<StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
										<TextBlock Text="Date: "></TextBlock>
										<TextBlock Text="{Binding Date}"></TextBlock>
									</StackPanel>

									<StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
										<TextBlock Text="Quantity: "></TextBlock>
										<TextBlock Text="{Binding Quantity}"></TextBlock>
									</StackPanel>

									<StackPanel Orientation="Horizontal" Margin="0, 0, 0, 10">
										<TextBlock Text="Status: "></TextBlock>
										<TextBlock Text="{Binding Status}"></TextBlock>
									</StackPanel>
								</StackPanel>

								<StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0, 25, 15, 0" HorizontalAlignment="Right" VerticalAlignment="Top">
									<TextBlock Text="Full price: "></TextBlock>
									<TextBlock FontWeight="Bold" Text="{Binding Price}"></TextBlock>
								</StackPanel>
							</Grid>
						</Border>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</ScrollViewer>

		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
			<Button Background="#ABCFCE" x:Name="AddClientButton" Width="75" HorizontalContentAlignment="Center" Margin="0 25" Click="AddClientButton_Click" Content="Add"></Button>
		</StackPanel>
    </Grid>
</UserControl>
